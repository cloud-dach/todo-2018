---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: todo-api
  namespace: @NAMESPACE@
spec:
  replicas: 2
  template:
    metadata:
      labels:
        app: todo-api
        tier: backend
    spec:
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: app
                operator: In
                values:
                - todo-api
            topologyKey: "kubernetes.io/hostname"
      containers:
      - name: todo-api
        image: @REGISTRY@/todo-api
        imagePullPolicy: Always
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
        env:
        - name: CLOUDANT_SECRET
          valueFrom:
            secretKeyRef:
              name: binding-@SVCNAME@
              key: binding
---
kind: Service
apiVersion: v1
metadata:
  name: todo-api
  namespace: @NAMESPACE@
spec:
  selector:
    app: todo-api
    tier: backend
  ports:
  - protocol: TCP
    port: 8080
    targetPort: 8080
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: todo-nginx
  namespace: @NAMESPACE@
spec:
  replicas: 2
  template:
    metadata:
      labels:
        app: todo-nginx
        tier: web
    spec:
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: app
                operator: In
                values:
                - todo-nginx
            topologyKey: "kubernetes.io/hostname"
      containers:
      - name: todo-nginx
        image: @REGISTRY@/todo-nginx
        imagePullPolicy: Always
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
        env:
        - name:   S3_ACCESS_KEY
          value:  @S3_ACCESS_KEY@
        - name:   S3_SECRET_KEY
          value:  @S3_SECRET_KEY@
        - name:   S3_BUCKET
          value:  @S3_BUCKET@
        - name:   COS_ENDPOINT
          value:  @COS_ENDPOINT@
        - name:   COS_URI
          value:  @COS_URI@
        - name:   NGINX_LOCATION
          value:  @NGINX_LOCATION@
---
kind: Service
apiVersion: v1
metadata:
  name: todo-nginx
  namespace: @NAMESPACE@
spec:
  selector:
    app: todo-nginx
    tier: web
  ports:
  - protocol: TCP
    port: 8080
    targetPort: 8080
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: todo-app
  namespace: @NAMESPACE@
  annotations:
   ingress.bluemix.net/redirect-to-https: "True"
   ingress.bluemix.net/rewrite-path: "serviceName=todo-api rewrite=/api;serviceName=todo-nginx rewrite=/;"
spec:
  tls:
  - hosts:
    - todo.@INGRESS_SUBDOMAIN@
    secretName: @INGRESS_SECRET@
  rules:
  - host: todo.@INGRESS_SUBDOMAIN@
    http:
      paths:
      - path: /api
        backend:
          serviceName: todo-api
          servicePort: 8080
      - path: /
        backend:
          serviceName: todo-nginx
          servicePort: 8080
